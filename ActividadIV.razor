@page "/forfishes"
<div class="jumbotron">
    @for (int i = 0; i < Movies.Count; i++)
    {
        <div class="list-group mb-3">
            <a href="#" class="list-group-item list-group-item-action flex-column aling-items-start">
                <div class="row">
                    <div class="col md-3">
                        <img class="img-thumbnail" src=@Movies[i].MovieImage alt="" height="200px" width="200px">
                    </div>
                    <div class="cold-md-9">
                        <h4 class="text-left">
                            Gender:
                            <small class="text-muted">@Movies[i].MovieGender</small>
                        </h4>
                        <p class="mb-0 text-left">@Movies[i].MovieDescription</p>
                        <footer class="blockquote-footer text-left">Publication Date<cite
                             title="Source Title">@Movies[i].PublicationDate.ToString("yyyy/MM/dd")</cite></footer>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
@code{
